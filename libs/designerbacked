# Start with a base image containing Java runtime
FROM openjdk:8-jdk-alpine

# Add a volume pointing to /tmp
VOLUME /tmp

# Make port 9494 available to the world outside this container
EXPOSE 9494

# Add the application's jar to the container
WORKDIR /usr
ADD thin /usr/thin
ADD h2.properties /usr/h2.properties

# Run the jar file -jar 
ENTRYPOINT ["java","-Dthin.root=/usr/thin/root/","-jar","/usr/thin/root/edp-kafka-designer-0.0.1-SNAPSHOT.jar","--spring.config.location=/usr/h2.properties"]
